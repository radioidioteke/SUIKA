<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/notification_item_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/activated_background_indicator"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/catImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="8dp "
            android:contentDescription="@null"
            android:src="@drawable/notificacion_boton_eliminar" />

        <TextView
            android:id="@+id/notification_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/deleteNotification"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/notificacion_boton_eliminar" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#9c9c9c" />

    <ImageView
        android:id="@+id/notification_notreaded"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="7dp"
        android:contentDescription="@null"
        android:src="@drawable/notificacion_pin1" />

</RelativeLayout>